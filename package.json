{
  "name": "clean-ts-api",
  "version": "0.0.1",
  "description": "Clean Code using typescript when building api",
  "scripts": {
    "start": "node -r dotenv-safe/config dist",
    "dev": "ts-node-dev -r dotenv-safe/config --rs --respawn src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "pretest": "npm run lint"
  },
  "keywords": [
    "clean code",
    "typescript"
  ],
  "author": "Bayu Setiawan",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^14.14.37",
    "gts": "^3.1.0",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv-safe": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.0"
  }
}
